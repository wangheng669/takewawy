/*清楚浮动*/
.clearfix {
  overflow: auto;
  _height: 1%;
}

page{
  background: #f5f5f5;
}
/*总体主盒子*/  
.container { 
  width: 100%;  
  height: 100%;  
  background-color: #f5f5f5;  
  color: #939393;
}
/*顶部*/
.top-container{
  height: 90rpx;
  border-width: 3px 0 1px 0;
  border-style: solid;
  border-color: #ccc;
  width:100%;
  line-height: 90rpx;
  color: #66CBFF;
  background: #fff;
  font-size: 14px;
  text-indent: 1em;
}
.location{
  float:right;
  color:red;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 500rpx;
  text-align: right;
}
/*左侧*/
.nav-left-items{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  color: #000;
  padding-left: 5px;
  border-bottom: 1px solid #ccc;
  position: relative;
}
.nav_left{ 
  width: 184rpx; 
  background: #f5f5f5;
  position: absolute;
}
.nav-left-count{
  position: absolute;
  top: -5px;
  right: 7px;
  background: red;
  width: 15px;
  height: 15px;
  color: #fff;
  line-height: 15px;
  border-radius: 50%;
  text-align: center;
}
/*右侧*/
.nav_right{
  height: 800rpx;
  background: #fff;
  width: 300px;
  position: relative;
  left: 184rpx;
  padding-left: 5px;
  color: #000;
  font-size: 14px;
}
.nav-right-title{
  line-height: 40px;
  border-bottom: 1px solid #ccc;
}
.nav-right-items{
  display: flex;
  padding: 12px 0;
  border-bottom: 1px solid #ccc;
}
.nav-right-items image{
  width: 76px;
  height: 76px;
}
.nav-right-dish{
  display: flex;
  flex-direction: column;
  margin-left: 14px;
  position: relative;
}
.dish-month-count{
  margin-top: 8px;
  font-size: 12px;
  color: #ccc;
}
.dish-price{
  margin-top: 12px;
}
.old-price{
  color: #ccc;
  text-decoration:line-through;
}
.new-price{
  color: red;
  font-size: 14px;
}
.dish-add{
  background: #000;
  color: #fff;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  text-align: center;
  position: absolute;
  margin-left: 300rpx;
  line-height: 18px;
  bottom: 0;
}
.dish-count{
  color: #000;
  text-align: center;
  position: absolute;
  margin-left: 250rpx;
  line-height: 18px;
  bottom: 0;
}
.dish-del{
  background: #000;
  color: #fff;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  text-align: center;
  position: absolute;
  line-height: 18px;
  bottom: 0;
  margin-left: 200rpx;
}
/*底部*/
.footer-container{
  height: 44px;
  background: #E2E2E2;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 13px;
  color: #000;
  line-height: 44px;
}
.car{
  width: 42px;
  height: 42px;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
  margin-left: 19px;
}
.car image{
  width: 19px;
  height: 19px;
  margin-top: 10px;
}
.total{
  margin-left: 15px;
}
.total-count{
  display: inline-block;
  width: 15px;
  height: 17px;
  line-height: 17px;
  border-radius: 50%;
  background: red;
  color: #fff;
  position: absolute;
  text-align: center;
}
.total-price{
  color: red;
}
.settle{
  width: 113px;
  height: 100%;
  background: #66CBFF;
  text-align: center;
  color: #fff;
  position: absolute;
  right: 0;
}